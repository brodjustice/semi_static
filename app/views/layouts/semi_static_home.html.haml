!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => I18n.locale.to_s, "xml:lang" => I18n.locale.to_s}
  %head
    %title= @title || SemiStatic::Engine.config.site_name
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }/
    %meta{ :name => "Description", :content => "#{SemiStatic::Engine.config.site_name}" }/
    %meta{ :name => "keywords", :content => "#{t('keywords')}" }/
    %meta{ :name => "rating", :content => "General" }/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/

    = csrf_meta_tags

    -# You can always have the css delivered in the standard way with the following:
    -#
    -# = stylesheet_link_tag 'semi_static/application', :media => 'all'
    -#
    -# However, for this layout we choose to embeed the small amount of CSS directly
    -# into the header, which is then one less file to fecth and improves ratings
    -# and load time
    %style{:type => "text/css"}
      :plain
        @font-face { 
          font-family: 'Raleway'; font-style: normal; font-weight: 200;
          src: url('/assets/raleway-extralight.eot');
          src: url('/assets/raleway-extralight.eot?#iefix') format('embedded-opentype'), 
               url('/assets/raleway200.woff') format('woff'), 
               url('/assets/raleway-extralight.ttf') format('truetype'); 
        }
        @font-face { 
          font-family: 'Raleway'; font-style: normal; font-weight: 400; 
          src: url('/assets/raleway.eot');
          src: url('/assets/raleway.eot?#iefix') format('embedded-opentype'), 
               url('/assets/raleway400.woff') format('woff'), 
               url('/assets/raleway-regular.ttf') format('truetype'); 
        }
      = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('home.css.scss').source
      -# = Rails.application.assets.find_asset('semi_static/home.css').source
      = yield :inline_css

    %script
      = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('semi-static.js').source.html_safe

    %link{:rel => 'shortcut icon', :href => '/assets/favicon.ico'}
  %body
    = render :partial => 'semi_static/shared/banner'
    #container
      - unless flash.blank?
        #notice
          = flash[:alert]
          = flash[:error]
          = flash[:notice]
      #content
        =yield
    = render :partial => 'semi_static/shared/footer'
    = render :partial => SemiStatic::Engine.config.analytics_partial unless SemiStatic::Engine.config.analytics_partial.nil?
