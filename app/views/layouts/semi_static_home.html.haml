!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => I18n.locale.to_s, "xml:lang" => I18n.locale.to_s, :prefix => "og: http://ogp.me/ns#"}
  %head
    %title= seo_title
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }/
    %meta{ :name => "description", :content => seo_description }/
    - unless seo_keywords.blank?
      %meta{ :name => "keywords", :content => seo_keywords }/
    %meta{ :name => "rating", :content => "General" }/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/

    -# Open Graph Meta Tags
    %meta{ :property => "og:title", :content => seo_title }/
    %meta{ :property => "og:locale", :content => I18n.locale.to_s }/
    %meta{ :property => "og:url", :content => request.url }/
    %meta{ :property => "og:site_name", :content => SemiStatic::Engine.config.site_name }/
    %meta{ :property => "og:type", :content => 'website' }/
    %meta{ :property => "og:image", :content => og_image_url }/

    = csrf_meta_tags

    -# hreflang tags
    = hreflang_tags

    = render :partial => 'semi_static/shared/font'

    %style{:type => "text/css"}
      = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('home.css.scss').source
      = yield :header_css

    %script
      = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('semi-static.js').source.html_safe
      - if (theme_js = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('theme.js'))
        = theme_js.source.html_safe
      - if (home_theme_js = ObjectSpace.each_object(Sprockets::Environment).first.find_asset('home_theme.js'))
        = home_theme_js.source.html_safe

    -# In the case of google analytics the async code must be in the head section in order that it
    -# can be validated for google webmaster tools
    = render :partial => SemiStatic::Engine.config.analytics_partial unless SemiStatic::Engine.config.analytics_partial.nil?
    %link{:rel => 'shortcut icon', :href => '/assets/favicon.ico'}
  %body#semi-static-home-page
    #body-inner
      = render :partial => 'semi_static/shared/home_body'
      = render :partial => 'semi_static/shared/footer'
