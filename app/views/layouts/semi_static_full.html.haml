!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => I18n.locale.to_s, "xml:lang" => I18n.locale.to_s, :prefix => "og: http://ogp.me/ns#"}
  %head
    %title= @title || SemiStatic::Engine.config.site_name
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }/
    %meta{ :name => "description", :content => "#{SemiStatic::Engine.config.site_name}" }/
    - unless seo_keywords.blank?
      %meta{ :name => "keywords", :content => seo_keywords }/
    %meta{ :name => "rating", :content => "General" }/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/

    -# Open Graph Meta Tags
    %meta{ :property => "og:title", :content => seo_title }/
    %meta{ :property => "og:locale", :content => I18n.locale.to_s }/
    %meta{ :property => "og:url", :content => request.url }/
    %meta{ :property => "og:site_name", :content => SemiStatic::Engine.config.site_name }/
    %meta{ :property => "og:type", :content => 'website' }/
    %meta{ :property => "og:image", :content => og_image_url }/

    = csrf_meta_tags

    = javascript_include_tag 'semi_static_application'
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    = stylesheet_link_tag 'semi_static_application', :media => 'all'
    %style{:type => "text/css"}
      = yield :header_css

    = yield :ujs

    %link{:rel => 'shortcut icon', :href => '/assets/favicon.ico'}
  %body
    #body-inner
      = render :partial => 'semi_static/shared/top'
      = yield :banner
      = render :partial => 'semi_static/shared/overlay'
      #frame
        #container
          - unless flash.blank?
            #notice
              = flash[:alert]
              = flash[:error]
              = flash[:notice]
          #dialog{:style => 'display: none;'}
          #content
            =yield
      = render :partial => 'semi_static/shared/footer'
      = render :partial => SemiStatic::Engine.config.analytics_partial unless SemiStatic::Engine.config.analytics_partial.nil?
