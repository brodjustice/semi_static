!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %head
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }/
    %meta{ :name => "Description", :content => "#{SemiStatic::Engine.config.site_name}" }/
    %meta{ :name => "keywords", :content => "" }/
    %meta{ :name => "rating", :content => "General" }/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/
    %meta{ :name => "ROBOTS", :content => 'NOINDEX, NOFOLLOW' }/

    %title= SemiStatic::Engine.config.site_name

    = csrf_meta_tags

    = javascript_include_tag 'semi_static_application'
    = stylesheet_link_tag 'semi_static_full', :media => 'all'
    = yield :ujs

    %link{:rel => 'shortcut icon', :href => '/assets/favicon.ico'}
  %body
    = render :partial => 'semi_static/shared/dashboard_top'
    #container
      #container-inner
        - unless flash.blank?
          #notice
            = flash[:alert]
            = flash[:error]
            = flash[:notice]
        #header
          #header-inner
            = render :partial => 'semi_static/shared/dashboard_header'
        #dialog{:style => 'display: none;'}
        #content
          =yield
        #footer
          = render :partial => 'semi_static/shared/footer'
    :javascript
