!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => I18n.locale.to_s, "xml:lang" => I18n.locale.to_s}
  %head
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }/
    %meta{ :name => "description", :content => "#{Rails.application.config.site_name}" }/
    %meta{ :name => "keywords", :content => "#{t('keywords')}" }/
    %meta{ :name => "rating", :content => "General" }/
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}/

    %title= Rails.application.config.site_name
    = csrf_meta_tags

    -#= javascript_include_tag 'application'
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    = stylesheet_link_tag 'semi_static_application', :media => 'all'
    = yield :ujs

    %link{:rel => 'shortcut icon', :href => '/assets/favicon.ico'}
  %body
    = render :partial => 'semi_static/shared/header'
    #container
      - unless flash.blank?
        #notice
          = flash[:alert]
          = flash[:error]
          = flash[:notice]
      #dialog{:style => 'display: none;'}
      #content
        =yield
    = render :partial => 'semi_static/shared/footer'
    :javascript
