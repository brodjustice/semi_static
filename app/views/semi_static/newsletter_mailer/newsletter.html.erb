<%- max_images = @newsletter.max_image_attachments + 1 %>

<body class="mBody" width="100%" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; color:#333333; text-align:left;" bgcolor="#f7f8f3">
  <!-- html wrapper -->
  <table class="wrh" id="top" width="100%" cellpadding="0" cellspacing="0" bgcolor="#f7f8f3" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; color:#333333; text-align:left;">
    <tr>
      <td>&nbsp;</td>
      <!-- content wrapper -->
      <td align="center" style="width:602px; max-width:602px;">
        <!-- content -->
        <table width="602" cellpadding="11" cellspacing="0" style="max-width:602px; width:100% !important; " bgcolor="#ffffff">
          <tr>
            <td class="bCont" align="center" style="padding-top:9px; font-size:1px">
              <!-- header -->
              <table class="mHead" width="100%" cellpadding="0" cellspacing="0" style="border-bottom: 1px solid #a8a8a8; width:100% !important;">
                <tr>
                  <td class="logo" width="45%" align="left" valign="top">
                    <a href="<%= @site_url %>" target="_blank" style="text-decoration:none;">
                      <img class="rha640" src="<%= attachments['logo.jpg'].url %>" border="0" style="display:block; font-family:'Times New Roman', Times, serif; font-size:30px; color:#868474; text-transform:uppercase;" alt="<%= SemiStatic::Engine.config.site_name %>" title="<%= SemiStatic::Engine.config.site_name %>" />
                    </a>
                  </td>
                  <td class="hl1" align="right" valign="bottom" style="padding-left:20px;">
                    <table cellpadding="0" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:18px; color:#868474;">
                      <tr>
                        <td align="right" valign="bottom" style="padding-bottom:9px; text-transform:uppercase;">
                          <h1 style="color:#0060aa" class="rdn480"><%= @newsletter.name %></h1>
                          <h2><%= @newsletter.subtitle %></h2>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
              <!-- /header -->

              <!-- separator -->
              <table class="mSep " width="100%" cellpadding="0" cellspacing="0" style="">
                <tr>
                  <td height="15" align="center" style="font-size:2px; line-height:2px;">&nbsp;</td>
                </tr>
              </table>
              <!-- /separator -->

              <% if false %>
              <!-- ONE COLUMN SUB HEADER -->
              <!-- Wide image here -->
              <table width="100%" class="mProd_1x1" cellpadding="0" cellspacing="0" style="width:100% !important;">
                <tbody>
                  <tr>
                    <td class="eProdImg_1x1 swap_a_img swap_a_img_right_top" align="left"><a href="http://quantum-websites.com" target="_blank" style="height:293px; background-image:url(http://quantum-websites.com/hosted_image.jpg); background-position:-9999px -9999px; background-repeat:no-repeat; text-decoration:none;"><img src="http://quantum-websites.com/hosted_image.jpg" border="0" width="580" style="display:block; max-width:580px; width:100% !important;" title="Header title" alt="Header alt"></a></td>
                  </tr>
                </tbody>
              </table>
              <!-- /wide image -->
              <% end %> 

              <!-- title + button text -->
              <table class="mFeat" width="100%" cellpadding="0" cellspacing="0" style="width:100% !important;">
                <tbody>
                  <tr>
                    <td align="left" valign="top">
                      <table width="100%" cellpadding="0" cellspacing="0" style="width:100% !important;">
                        <tbody>
                          <tr>
			  <td class="eProdTitle" align="left" style="padding-top:3px; padding-bottom:1px; font-family:font-family:Arial, Helvetica, sans-serif; font-size:18px; line-height:1.1em; color:#6e6d5e;">
                            <p><%= [@newsletter.salutation_pre_text, salutation_name(@newsletter, @subscriber), ','].join(' ') %></p>
                            <% unless @newsletter.salutation_post_text.blank? %>
                              <%= simple_format(@newsletter.salutation_post_text) %>
                            <% end %>
                          </td>
                          </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                </tbody>
              </table>
              <!-- /title + button text -->

              <!-- separator -->
              <!-- SEPARATOR -->
              <table class="mSep rdn480" width="100%" cellpadding="0" cellspacing="0">
                <tbody><tr>
                  <td height="15" align="center" style="font-size:2px; line-height:2px;">&nbsp;</td>
                </tr>
              </tbody></table>
              <!-- /SEPARATOR -->
              <!-- /separator -->

              <!-- Newsletter entries: 1x2 -->
              <% @newsletter.draft_entry_objects.each_slice(2) do |row| %>
              <% e = row.first %>
              <% left_entry = e %>
              <table class="mProd_1x2" width="100%" cellpadding="0" cellspacing="0" style="width:100% !important;">
                <tbody><tr>
                  <% max_images = max_images -1 %>
                  <td class="eProd_1x2_box rdb480 rwa480 rma480" width="48%" align="left" valign="top">
                    <table class="eProd_1x2 rwf480" width="100%" cellpadding="0" cellspacing="0">
                      <tbody><tr>
                        <% if max_images > 0 %>
                          <td class="eProdImg_1x2 rwa480" align="left" valign="bottom"><a href="<%= entry_url(e) %>" target="_blank" style="text-decoration:none;"><img class="rwf480 rmn480" src="<%= attachments[e.id.to_s + '.jpg'].url %>" width="280" border="0" style="display:block; max-width:280px; width:100% !important;" title="<%= e.title %>" alt="<%= e.title %>"></a></td>
                        <% else %>
                          <td class="eProdImg_1x2 rwa480" align="left" valign="bottom"><a href="<%= entry_url(e) %>" target="_blank" style="text-decoration:none;"><img class="rwf480 rmn480" src="<%= 'http://' + @site_url + @newsletter.draft_entry_ids[e.id][:img_url] %>" width="280" border="0" style="display:block; max-width:280px; width:100% !important;" title="<%= e.title %>" alt="<%= e.title %>"></a></td>
                        <% end %>
                      </tr>
                      <tr>
                        <td class="rwa480" align="center" style="padding-bottom: 4px; margin-bottom: 12px; border-bottom: 1px solid #a0a0a0;">
                          <!-- title + button arrow -->
                          <table width="100%" cellpadding="0" cellspacing="0">
                            <tbody><tr>
                              <td align="left" valign="top">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                  <tbody><tr>
                                    <td class="eProdTitle" align="left" style="padding-top:3px; padding-bottom:1px; font-family:Arial, Helvetica, sans-serif; font-size:18px; line-height:1.1em;"><a href="<%= entry_url(e) %>" target="_blank" style="display:block; color:#666454; text-decoration:none;"><%= e.title %></a></td>
                                  </tr>
                                  <tr>
                                    <td class="eProdSubtitle" align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:1.1em;"><a href="<%= entry_url(e) %>" target="_blank" style="display:block; color:#aead9e; text-decoration:none;"><%= e.sub_title %></a></td>
                                  </tr>
                                </tbody></table>
                              </td>
                              <td class="eBtnTitle" align="right" valign="top">
                                <table class="rflr480" cellpadding="0" cellspacing="0">
                                  <tbody><tr>
                                    <td style="padding-top:6px; padding-left:14px;">
                                      <table class="rflr480" cellpadding="0" cellspacing="0">
                                        <tbody><tr>
                                          <td class="btn btnArrow" align="left" style="border-radius:4px; line-height:2em; font-family:'Average Sans', Arial, Helvetica, sans-serif; font-size:14px; color:#ffffff; text-transform:uppercase;" bgcolor="#0060aa"><a href="<%= entry_url(e) %>" target="_blank" style="display:block; color:#ffffff; text-decoration:none; white-space:nowrap;">&nbsp;&nbsp;&nbsp;<span style="font-family: 'Comic Sans MS', Marker Felt, Arial, Helvetica, sans-serif; font-size:16px;">&gt;</span>&nbsp;&nbsp;&nbsp;</a></td>
                                        </tr>
                                      </tbody></table>
                                    </td>
                                  </tr>
                                </tbody></table>
                              </td>
                            </tr>
                          </tbody></table>
                          <!-- /title + button arrow -->
                        </td>
                      </tr>
                    </tbody></table>
                  </td>

                  <td class="eProd_1x2_div rdn480" width="9" style="min-width:9px; max-width:9px; font-size:2px; border-right:1px solid #f7f8f4;">&nbsp;</td>
                  <td class="eProd_1x2_div rdn480" width="9" style="min-width:9px; max-width:9px; font-size:2px; border-left:1px solid #f7f8f4;">&nbsp;</td>

                  <% e = row.last %>
                  <% max_images = max_images - 1 %>
                  <td class="eProd_1x2_box rdb480 rwa480 rma480" width="48%" align="right" valign="top">
                    <%- unless e == left_entry %>
                    <table class="eProd_1x2 rwf480" width="100%" cellpadding="0" cellspacing="0">
                      <tbody><tr>
                        <% if max_images > 0 %>
                          <td class="eProdImg_1x2 rwa480" align="left" valign="bottom"><a href="<%= entry_url(e) %>" target="_blank" style="text-decoration:none;"><img class="rwf480 rmn480" src="<%= attachments[e.id.to_s + '.jpg'].url %>" width="280" border="0" style="display:block; max-width:280px; width:100% !important;" title="<%= e.title %>" alt="<%= e.title %>"></a></td>
                        <% else %>
                          <td class="eProdImg_1x2 rwa480" align="left" valign="bottom"><a href="<%= entry_url(e) %>" target="_blank" style="text-decoration:none;"><img class="rwf480 rmn480" src="<%= 'http://' + @site_url + @newsletter.draft_entry_ids[e.id][:img_url] %>" width="280" border="0" style="display:block; max-width:280px; width:100% !important;" title="<%= e.title %>" alt="<%= e.title %>"></a></td>
                      <% end %>
                      </tr>
                      <tr>
                        <td class="rwa480" align="center"  style="padding-bottom: 4px; margin-bottom: 12px; border-bottom: 1px solid #a0a0a0;">
                          <!-- title + button arrow -->
                          <table width="100%" cellpadding="0" cellspacing="0">
                            <tbody><tr>
                              <td align="left" valign="top" style="border-bottom: 1px; border-color: #f4f4f4;">
                                <table width="100%" cellpadding="0" cellspacing="0">
                                  <tbody><tr>
                                    <td class="eProdTitle" align="left" style="padding-top:3px; padding-bottom:1px;  font-family:Arial, Helvetica, sans-serif; font-size:18px; line-height:1.1em;"><a href="<%= entry_url(e) %>" target="_blank" style="display:block; color:#666454; text-decoration:none;"><%= e.title %></a></td>
                                  </tr>
                                  <tr>
                                    <td class="eProdSubtitle" align="left" style="font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:1.1em;"><a href="<%= attachments[e.id.to_s + '.jpg'].url %>" target="_blank" style="display:block; color:#aead9e; text-decoration:none;"><%= e.sub_title %></a></td>
                                  </tr>
                                </tbody></table>
                              </td>
                              <td class="eBtnTitle" align="right" valign="top">
                                <table class="rflr480" cellpadding="0" cellspacing="0">
                                  <tbody><tr>
                                    <td style="padding-top:6px; padding-left:14px;">
                                      <table class="rflr480" cellpadding="0" cellspacing="0">
                                        <tbody><tr>
                                          <td class="btn btnArrow" align="left" style="border-radius:4px; line-height:2em; font-family:'Average Sans', Arial, Helvetica, sans-serif; font-size:14px; color:#ffffff; text-transform:uppercase;" bgcolor="#0060aa"><a href="<%= attachments[e.id.to_s + '.jpg'].url %>" target="_blank" style="display:block; color:#ffffff; text-decoration:none; white-space:nowrap;">&nbsp;&nbsp;&nbsp;<span style="font-family: 'Comic Sans MS', Marker Felt, Arial, Helvetica, sans-serif; font-size:16px;">&gt;</span>&nbsp;&nbsp;&nbsp;</a></td>
                                        </tr>
                                      </tbody></table>
                                    </td>
                                  </tr>
                                </tbody></table>
                              </td>
                            </tr>
                          </tbody></table>
                          <!-- /title + button arrow -->
                        </td>
                      </tr>
                    </tbody></table>
                    <% end %>
                  </td>
                </tr>
              </tbody></table>
              <!-- /products: 1x2 -->

              <!-- separator -->
              <!-- SEPARATOR -->
              <table class="mSep rdn480" width="100%" cellpadding="0" cellspacing="0">
                <tbody><tr>
                  <td height="25" align="center" style="font-size:2px; line-height:2px;">&nbsp;</td>
                </tr>
              </tbody></table>
              <!-- /SEPARATOR -->
              <!-- /separator -->
              <% end %>

              <!-- SEPARATOR standard -->
              <table class="mSep" width="100%" cellpadding="0" cellspacing="0">
                <tbody><tr>
                  <td height="18" align="center" style="font-size:2px; line-height:2px;">&nbsp;</td>
                </tr>
              </tbody></table>
              <!-- /SEPARATOR standard -->

            </td>
          </tr>
        </table>
        <!-- /content -->

        <!-- separator -->
        <table class="mSep mSepBelowLogo" width="100%" cellpadding="0" cellspacing="0" style="width:100% !important;">
          <tr>
            <td height="15" align="center" style="font-size:2px; line-height:2px;">&nbsp;</td>
          </tr>
        </table>
        <!-- /separator -->

      </td>
      <!-- /content wrapper -->
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <!-- footer -->
      <td align="center" style="width:602px; max-width:602px; padding-top:4px; padding-bottom:15;">
  
      <!-- navigation -->
      <table class="mNav" width="100%" cellpadding="0" cellspacing="0" style="width:100% !important;">
        <tr>
          <td class="rdb480" align="center" valign="bottom">
            <table class="navGrp rfs12_480 rfs11_480" width="100%" cellpadding="0" cellspacing="10" style="font-family:Muli, Arial, Helvetica, sans-serif; font-size:11px; color:#868474; white-space:nowrap;">
              <tr>
                <% SemiStatic::Tag.menu.locale(I18n.locale.to_s)[0..2].each do |t| %>
                <td width="15%" align="center" valign="bottom" style="border-bottom:1px solid #b1b1a4; padding-bottom:3px;"><a target="_blank" href="<%= "http://#{@site_url}#{menu_from_tag(t)}" %>" style="color:#868474; text-transform:uppercase; text-decoration:none;"><%= t.name %></a></td>
                <% end %>
              </tr>
            </table>
          </td>
          <td class="rdb480" align="center" valign="bottom">
            <table class="navGrp rfs12_480 rfs11_480" width="100%" cellpadding="0" cellspacing="10" style="font-family:Muli, Arial, Helvetica, sans-serif; font-size:11px; color:#868474; white-space:nowrap;">
              <tr>
                <% SemiStatic::Tag.menu.locale(I18n.locale.to_s)[3..4].each do |t| %>
                <td width="15%" align="center" valign="bottom" style="border-bottom:1px solid #b1b1a4; padding-bottom:3px;"><a target="_blank" href="<%= "http://#{@site_url}#{menu_from_tag(t)}" %>" style="color:#868474; text-transform:uppercase; text-decoration:none;"><%= t.name %></a></td>
                <% end %>
                <td width="15%" align="center" valign="bottom" style="border-bottom:1px solid #b1b1a4; padding-bottom:3px;"><a target="_blank" href="<%= new_contact_url %>" style="color:#868474; text-transform:uppercase; text-decoration:none;">Contact</a></td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      <!-- /navigation -->
  
      <!-- subscribe  -->
      <table class="mInfo rfs12_480" width="100%" cellpadding="10" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:11px; color:#868474;">
        <tr>
          <td style="font-family: Arial; font-size: 11px; color:#868474; line-height: 17px; text-align: center;" class="txtCenter font12px lh15">
              <a href="<%= edit_subscriber_path(@subscriber, :token => @subscriber.cancel_token, :only_path => false) %>" target="_blank" style="font-family: Arial; font-size: 11px; color:#868474; line-height: 17px; text-decoration: underline;" class="font12px lh15">Click here to unsubscribe from this Newsletter</a>
          </td>
        </tr>
        <tr>
          <td style="font-family: Arial; font-size: 11px; color:#868474; line-height: 17px; text-align: left;" class="txtCenter font12px lh15">
          </td>
        </tr>
      </table>
      <!-- /unsubscribe -->
  
      <!-- Imprint -->
      <table class="mLegalTxt rfs12_480" width="100%" cellpadding="10" cellspacing="0" style="font-family:Arial, Helvetica, sans-serif; font-size:11px; color:#868474;">
        <tr>
          <td align="center" style="padding-top:5px;">
            <a href="<%= site_path('imprint-credits') %>" target="_blank" style="text-decoration:none; color:#868474">&copy;<%= SemiStatic::Engine.config.copyright_year + ' ' + SemiStatic::Engine.config.copyright_owner %></a>
          </td>
        </tr>
      </table>
      <!-- /imprint -->
    </td>
    <!-- /footer -->
    <td>&nbsp;</td>
    </tr>
  </table>
  <!-- /html wrapper -->
</body>
</html>
