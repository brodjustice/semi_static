      *[class~=prod_1x3_pure_txt_tr] { display:block !important; }
      *[class~=prod_1x3_pure_txt] { display:block !important; min-height:113px !important; padding-left:143px !important; padding-bottom:10px !important; }
      *[class~=mProd_1x3_pure]>tbody>tr>td:last-child .prod_1x3_pure_txt { padding-bottom:0 !important; }
      *[class~=prod_1x3_pure_txt] td { padding:26px 0 0 !important; }

      *[class~=navGrp] td { width:33% !important; }
      *[class~=eMagCover] { padding-bottom:16px !important; }
      *[class~=prodHl] { padding:12px 10px 3px !important; }
      *[class~=eProdTitle] { padding-top:4px !important; padding-bottom:3px !important; font-size:19px !important; }
      *[class~=eBtnTitle]>table>tbody>tr>td { padding-top:5px !important; }
      *[class~=eProdSubtitle] { padding-bottom:18px !important; }
      *[class~=btn] a { display:block !important; padding:0 2px 2px !important; font-size:14px !important; }

      *[class~=swap_a_img] img { display:none !important; }
