= form_for @squeeze do |f|
  .group
    .col.span_2_of_3
      - if @squeeze.errors.any?
        #error_explanation
          %h2= "#{pluralize(@squeeze.errors.count, "error")} prohibited this event from being saved:"
          %ul
            - @squeeze.errors.full_messages.each do |msg|
              %li= msg
      %h2 Main Content
      %fieldset
        = f.label :name
        %br/
        = f.text_field :name
        %br
        = f.label :title
        %br/
        = f.text_field :title
      %fieldset
        = f.label :teaser
        %br/
        = f.text_area :teaser, :rows => 6
        %br/
        = f.label :form_instructions
        %br/
        = f.text_area :form_instructions, :rows => 6
        %br/
        = f.label :agreement
        %br/
        = f.text_area :agreement, :rows => 6
        %br/
        = f.label :instructions
        %br/
        = f.text_area :instructions, :rows => 6
        %br/
        = f.label :email_footer
        %br/
        = f.text_area :email_footer, :rows => 6
        %br/
        = f.label :doc, 'Doc (manditory, PDF format)'
        = f.file_field :doc


    .col.span_1_of_3
      .sidebar
        %h2 Form Fields
        %fieldset
          = f.check_box :company_field
          = f.label :company_field
          %br/
          = f.check_box :position_field
          = f.label :position_field
          %br/
  .mid
    .actions
      = f.submit 'Save'
