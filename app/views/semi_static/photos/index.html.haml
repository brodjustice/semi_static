= render :partial => 'semi_static/shared/custom_banner', :locals => {:banner_name => 'Gallery'}
= render :partial => 'semi_static/tags/show'
.gallery.index.group
  %h2= t('Gallery')
  .spacer_wrapper
    - @photos.all.each do |p|
      .photo.nutshell
        .spaced
          = link_to image_tag(p.img.url(:mini), :title => "#{p.title} - #{truncate(p.description, :length => 50)}"), photo_path(p)

