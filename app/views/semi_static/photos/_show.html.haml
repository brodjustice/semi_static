%h2= @photo.title
.section.rotate
  .col.span_1_of_4
    = link_to t('Previous'), photo_path(@previous), :class => 'prev', :remote => true
  .col.span_2_of_4
    - unless @photo.entry.blank?
      .link
        = link_to @photo.entry.title, entry_path(@photo.entry)
  .col.span_1_of_4
    = link_to t('Next'), photo_path(@next), :class => 'next', :remote => true
- if @photo && @photo.img.exists? then
  = link_to image_tag(@photo.img.url(:big), :title => @photo.title), @photo.img.url
.caption
  = simple_format(@photo.description) unless @photo.description.blank?
