= form_for([@entry, @product]) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= pluralize(@product.errors.count, "error") + ' prohibited this product from being saved:'

      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .group
    .col.span_1_of_2
      %fieldset
        = f.label :name
        %br/
        = f.text_field :name
      %fieldset
        = f.label :description
        %br/
        = f.text_area :description, :rows => 8
      %fieldset
        = f.label :inventory_level
        %br/
        = f.text_field :inventory_level
    .col.span_1_of_2
      %fieldset
        = f.label :currency
        %br/
        = f.text_field :currency
      %fieldset
        = f.label :price
        %br/
        = f.text_field :price
      %fieldset
        = f.label :color
        %br/
        = f.text_field :color
      %fieldset
        = f.label :height
        %br/
        = f.text_field :height
      %fieldset
        = f.label :depth
        %br/
        = f.text_field :depth
      %fieldset
        = f.label :width
        %br/
        = f.text_field :width
      %fieldset
        = f.label :weight
        %br/
        = f.text_field :weight
  .actions
    = f.submit
