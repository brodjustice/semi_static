- content_for :ujs do
  :javascript
    $(document).ready(function(){
      $(".sortable").tablesorter({headers:{7:{sorter:false}}});
    });

.app-title
  %h1
    %i.fa.fa-user.invert
    %span= SemiStatic::Contact.all.size.to_s + ' Website contacts'
  .text-right
    - if @nopaginate
      = link_to contacts_path, :title => 'Show contacts with pagination', :class => 'btn btn-primary loading' do
        %span.app-menu__icon.fa.fa-user
        %span Paginate
    - else
      = link_to contacts_path(:nopaginate => true), :title => 'Show all contacts without pagination', :class => 'btn btn-primary loading' do
        %span.app-menu__icon.fa.fa-user
        %span All

       
.tile
  .tile-body
    .table-responsive
      %table.table.sortable.table-bordered.table-hover
        %thead
          %tr
            %th Name
            %th Reason
            %th Message
            %th Email
            %th Phone
            %th{:title => 'Agreements'}
              %i.app-menu__icon.fa.fa-system
            %th Date
            %th
              %i.app-menu__icon.fa.fa-delete

          
        %tbody
          - @contacts.each do |c|
            %tr
              %td= link_to (c.fullname.present? ? c.fullname : 'Unknown'), c
              %td= c.reason.to_s
              %td= truncate(c.message, :length => 64)
              %td= mail_to c.email, c.email
              %td= c.telephone
              %td= c.agreements.size
              %td{:data => {:text => c.created_at.to_i}}= c.created_at.strftime('%d-%m-%y')
              %td
                = link_to c, :method => :delete, :data => { :confirm => "Confirm deleting #{c.fullname}" } do
                  %i.app-menu__icon.fa.fa-delete
      - unless @nopaginate
        = paginate @contacts, views_prefix: 'semi_static'

