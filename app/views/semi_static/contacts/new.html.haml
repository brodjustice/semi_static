- content_for :header_css do
  :plain
    iframe{width: 100%;}

= render :partial => 'semi_static/shared/custom_banner', :locals => {:banner_name => ['Contact', 'Default']}
- if SemiStatic::Engine.config.contact_partial.nil?
  .mid
    %h2= t('Contact_form')
    = render :partial => 'semi_static/contacts/form'
- else
  .mid.wide
    .section.group
      .col.span_1_of_2
        = render :partial => SemiStatic::Engine.config.contact_partial
      .col.span_1_of_2
        %h2= t('Contact_form')
        = render :partial => 'semi_static/contacts/form'

  
