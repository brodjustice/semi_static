.section
  .col.span_2_of_3
    .panel.group.list
      .icon= image_tag('/assets/search.png')
      %h1= @entries.count.to_s + ' Search results for ' + @query
      %table
        - @entries.__send__ controller.action_name == 'search' ? :each_with_hit : :each do |e, hit|
          - score_displayed = false
          %tr
            %td
              .icon= image_tag(e.tag.icon.url(:standard)) if e.tag.icon.present?
              %h2= link_to (hit.try(:highlight).try(:raw_title) ? hit.highlight.raw_title.join.html_safe : e.merged_main_entry_with_title.raw_title), e.merged_main_entry_with_title
            %td
              .more
                = link_to t('Show'), e.merged_main_entry_with_title
          - if hit.try(:highlight).try(:effective_tag_line)
            %tr
              %td
                %h2= hit.highlight.effective_tag_line.join('&hellip;').html_safe
              %td.score{:rowspan => 2, :class => 'fragment score'}= (hit._score * 100).round.to_s + '%'
              - score_displayed = true
          %tr.fragment
            %td
              = hit.try(:highlight).try(:body) ? hit.highlight.body.join('&hellip;').html_safe : truncate_html(e.body, :length => 100)
            - unless score_displayed
              %td{:class => 'fragment score'}= (hit._score * 100).round.to_s + '%'
  .col.span_1_of_3
    = render :partial => 'semi_static/tags/side_bar', :locals => {:start => 1, :entrytag => @entries.first ? @entries.first.tag : nil}
    = render :partial => 'semi_static/site/search'
