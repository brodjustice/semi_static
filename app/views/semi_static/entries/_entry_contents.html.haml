-# TODO: Major refactor required
- linked = ((defined?(linked)) && (linked || linked.nil?)) ? true : false
- unless e.youtube_id_str.blank?
  = entry_title(e, linked)
  = youtube_video(e.youtube_id_str)
- if !e.image_disable && e.img.present?
  .col.span_1_of_2.floater
    = render :partial => 'semi_static/entries/image', :locals => {:e => e, :style => style}
  .col.span_1_of_2.wrapping
    .html
      = icon(e.tag) if e.youtube_id_str.blank?
      - if @summaries && !e.merge_with_previous
        - if e.youtube_id_str.blank?
          = entry_title(e, linked)
        = entry_summary(e, e.summary_length)
      - else
        = entry_title(e, linked)
        = entry_body(e)
        = photo_main(e, @group_size || 2)
        = render :partial => 'semi_static/gallery/gallery', :locals => {:g => e.gallery, :e => e}
        = semantic_product(e)
- else
  .html
    = icon(e.tag) if e.youtube_id_str.blank?
    - if e.youtube_id_str.blank?
      = alt_img_as_icon(e)
      = entry_title(e, linked)
    - if @summaries && !e.merge_with_previous
      = entry_summary(e, e.summary_length)
    - else
      = entry_body(e)
      = photo_main(e, @group_size || 2)
      = render :partial => 'semi_static/gallery/slider', :locals => {:g => e.gallery, :e => e}
      = semantic_product(e)
