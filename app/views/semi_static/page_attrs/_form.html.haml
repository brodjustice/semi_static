= form_for([@page_attrable, @page_attr]) do |f|
  - if @page_attr.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page_attr.errors.count, "error")} prohibited this page attribute from being saved:"
      %ul
        - @page_attr.errors.full_messages.each do |msg|
          %li= msg

  = hidden_field_tag :return, @return
  %h5 Page Attribute
  .stacked-input-group
    = f.label :attr_key, 'Key', :class => 'input-group-text'
    = f.text_field :attr_key, :class => 'form-control'
  .stacked-input-group
    = f.label :attr_value, 'Value', :class => 'input-group-text'
    = f.text_field :attr_value, :class => 'form-control'

  .row
    .col-md-12.mt-3
      = f.submit 'Save', :class => 'btn btn-danger btn-block'

