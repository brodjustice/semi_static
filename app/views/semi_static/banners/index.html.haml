.mid.wide
  .button= link_to 'New Banner', new_banner_path
  %h1 Banners

  - @banners.each do |banner|
    %h4= banner.name
    - if banner.img.present?
      = image_tag(banner.img.url(:desktop), :title => banner.name, :class => 'ri')
    = link_to 'Edit', edit_banner_path(banner)
    = link_to image_tag('bin.png', :title => "Delete banner #{banner.name}"), banner, method: :delete, data: { confirm: "Are you sure you want to delete #{banner.name}?" }
