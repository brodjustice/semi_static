- @tag ||= entrytag
- unless @tag.nil?
  .panel.list
    - if SemiStatic::Tag.use_sprites?
      .icon.sprite{:id => "sprite_#{@tag.position.to_s}"}
    - else
      .icon= image_tag(@tag.icon.url(:big)) if @tag.icon.present?
    %h1= link_to @tag.sidebar_title, feature_path(@tag.slug)
    .section
      - (@tag.entries - [@entry]).each do |e|
        %h3= link_to e.title, e
- unless @entry.nil?
  = render :partial => 'semi_static/site/search' if @entry.side_bar_search
  = render :partial => 'semi_static/site/social' if @entry.side_bar_social
= render :partial => 'semi_static/tags/news' unless @entry && !@entry.side_bar_news
