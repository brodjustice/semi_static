#top
  #top-wrapper
    #menu-button{:onclick => 'semiStaticOpenMenu()'}
      = t('Menu')
      .menu-line
      .menu-line
      .menu-line
    #bar.contain
      #bar-inner
        = render 'semi_static/shared/bar'
      #logo-wrapper
        #logo
    = yield :pre_overlay
    #overlay
      #overlay-inner
        = render 'semi_static/shared/menu'
= yield :banner
- if lookup_context.exists?('semi_static/shared/_home_theme_banner')
  = render 'semi_static/shared/home_theme_banner'
#tag
  #tag-wrapper
    #tagline
      - if lookup_context.exists?('semi_static/shared/_tagline')
        = render 'semi_static/shared/tagline'
      - else
        = t('TagLine')
= yield :post_tagline
= yield :pre_content
#frame
  #container
    #dialog{:style => 'display: none;'}
    #content
      =yield
  = yield :post_content

