- banner_name ||= ''
- banner_name.kind_of?(Array) ? banner_name.first : banner_name
- if (banner = SemiStatic::Banner.find_by_name(banner_name)).present?
  - content_for :pre_overlay do
    #banner_marker

  - content_for :banner do
    #banner-wrapper
      #banner
        #banner-frame
          .bg.desktop{:style => "background-image: url(#{banner.img.url(:desktop)})"}
          .bg.mobile{:style => "display: none; background-image: url(#{banner.img.url(:mobile)})"}
    #tag
      #tag-wrapper
        #tagline
          = banner.tag_line
