-#
-# This is currently set for the 'Tiles' theme only, and impliements the
-# mobile slider menu. However, the changes are such that it should be
-# refactored and used in all themes.
-#
#slide-menu
  = render 'semi_static/shared/slide_menu'
#top
  #top-wrapper
    #bar.contain
      #bar-inner
        = render 'semi_static/shared/bar'
      #logo-wrapper
        = link_to semi_static.home_path do
          #logo
            = SemiStatic::Engine.config.try('logo_text') && SemiStatic::Engine.config.logo_text.html_safe
    = yield :pre_overlay
    #overlay
      #overlay-inner
        = render 'semi_static/shared/menu'
= yield :banner
= yield :pre_content
#frame
  #container
    #dialog{:style => 'display: none;'}
    #content
      =yield
  = yield :post_content
