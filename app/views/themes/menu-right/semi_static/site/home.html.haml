- if @tag.partial_before_entries?
  = render :partial => @tag.partial_path
- SemiStatic::Entry.home.locale(I18n.locale).each_slice(3).with_index do |row, i|
  .skrollr-holder
    .section{:class => "row_#{i.to_s}"}
      - row.each do |e|
        .col.span_1_of_3
          %article
            .entry.panel{:class => e.style_class, :style => "background-color:#{e.background_colour}; color: #{e.colour}"}
              .img= link_to semantic_entry_image(e, :home, 241), e
              %h1= link_to e.title, e
              = entry_summary(e)
              .more
                = link_to t('more...'), entry_path(e)
- if @tag.partial_after_entries?
  = render :partial => @tag.partial_path

