#menu-wrapper
  %nav#menu
    #menu-loading-wrapper
      #menu-loading
    #menu-close{:onclick => 'semiStaticCloseMenu()'}
      = t('Close')
    #menu-main.section.group
      - SemiStatic::Tag.menu.locale(I18n.locale.to_s).each_with_index do |t, i|
        .col.span_1_of_5
          .wrapper{:id => ('selected' if ((@tag == t) || (@selection == t.predefined_class)))}
            = link_to t.name, t.predefined_class.blank? ? semi_static.feature_path(t.slug) : "#{predefined_tags[t.predefined_class]}?tag_id=#{t.id}", :class => 'text ', :onclick => 'semiStaticLoading()'
            - if SemiStatic::Tag.use_sprites?
              .icon.sprite{:id => "sprite_#{(i + 1).to_s}"}
            - else
              - if t.icon_in_menu && t.icon.present?
                - if t.icon_resize
                  .icon= image_tag(t.icon.url(:big))
                - else
                  .icon= image_tag(t.icon.url)
              - else
                .icon
                  .custom
        - if (@tag == t) && (t.name != 'Home')
          - t.entries.unmerged.not_linked_to_tag.each do |e|
            .wrapper.sub
              = link_to e.title, e 
      #bar-in-menu
        = render :partial => 'semi_static/shared/bar'
