#slide-menu
  = render 'semi_static/shared/slide-menu'
#top
  #top-inner
    = render 'semi_static/shared/bar'
  = yield :pre_overlay
  #overlay
    #overlay-inner
      = render 'semi_static/shared/menu'
      #logo-wrapper
        = link_to semi_static.home_path do
          #logo
      #tag-wrapper
        #tagline
          = t('TagLine')
#frame
  = yield :banner
  = yield :pre_content
  #container
    - flash.each do |key, value|
      = content_tag :div, value, :id => "notice" unless value.blank?
    #dialog{:style => 'display: none;'}
    #content
      =yield
  = yield :post_content
